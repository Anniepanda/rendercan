{
  "name": "RenderCan",
  "manifest_version": 2,
  "version": "0.2",
  "description": "A simple way to record a canvas. Convert to a movie with something like: `ffmpeg -r 60 -i canvas-%09d.png out.webm`",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "icons": {
    "128": "images/icon-recording-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-default-38.png",
    "default_title": "RenderCan"
  }
}
