{
  "name": "RenderCan",
  "version": "0.1",
  "description": "A simple way to record a canvas.",
  "background_page": "background.html",
  "options_page": "options.html",
  "permissions": [
    "notifications"
  ],
  "icons": {
    "128": "images/logo_128x128.png",
    "48": "images/logo_128x128.png",
    "16": "images/logo_128x128.png"
  },
  "browser_action": {
    "default_icon": "images/logo_128x128.png",
    "default_title": "RenderCan",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["inline.js"]
    }
  ]
}
